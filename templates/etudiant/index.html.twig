{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}

    <h1>Etudiant</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de Naissance</th>
                <th>Surnom</th>
                <th>Promotion</th>
                <th>Maison</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td><a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">{{ etudiant.nom }} {{ etudiant.prenom }}</a></td>
                <td>{{ etudiant.dateNaiss ? etudiant.dateNaiss|date('Y-m-d') : '' }}</td>
                <td>{{ etudiant.surnom }}</td>
                <td>{{ etudiant.promotion.libelle ?? '' }}</td>
                <td>{{ etudiant.maison.nom ?? '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>  

{% endblock %}
